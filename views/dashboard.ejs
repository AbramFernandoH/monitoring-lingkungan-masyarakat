<%- layout('boilerplate/boilerplate') -%>

<style>
    .background {
        background-image: url('/css/img/bg.jpg'); /* Ganti 'gambar.jpg' dengan URL gambar yang diinginkan */
        background-size: cover;
        background-position: center;
    }
    </style>
    </head>
    <body>
    
    <div class="container mt-5 pt-5 background">
        <div class="d-flex flex-column gap-5">
            <div class="d-flex gap-3 align-items-center">
                <div class="d-flex flex-column gap-2 w-75">
                    <h4>Monthly Trend Iuran</h4>
        
                    <div id="monthly-trend-iuran" class="w-50 h-50"></div>
                </div>
    
                <div class="d-flex flex-column align-items-center gap-2 w-25">
                    <div class="d-flex flex-column gap-1 p-3 rounded text-white bg-primary w-100">
                        <h5>Total Pemasukan</h5>
    
                        <p>Rp <%= chartData.totalIncomes %></p>
                    </div>
    
                    <div class="d-flex flex-column gap-1 p-3 rounded text-white bg-danger w-100">
                        <h5>Total Pengeluaran</h5>
    
                        <p>Rp <%= chartData.totalOutcomes %></p>
                    </div>
                        
                    <div class="d-flex flex-column gap-1 p-3 rounded text-white bg-success w-100">
                        <h5>Sisa</h5>
                            
                        <p>Rp <%= chartData.gap %></p>
                    </div>
                </div>
            </div>
    
            <div class="d-flex align-items-center gap-5">
                <div class="w-75 d-flex flex-column gap-2">
                    <h4>Distribusi Pengeluaran</h4>
                    
                    <div id="distribusi-pengeluaran"></div>
                </div>
            </div>
        </div>
    </div>
    

<%- include('./partials/dashboardChart', chartData) %>
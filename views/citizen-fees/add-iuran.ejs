<%- layout('boilerplate/boilerplate') -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Tambah Data</title>
</head>
<body>
    <div class="mt-5 w-50 mx-auto border p-3">
        <h1 class="text-center">Input Iuran</h1>  
        <form action="/citizen-fees/add" method="post"> <!-- Tambah enctype -->
            <div class="row mb-3">
                <div class="col">
                    <label for="ID">Blok</label>
                    <input type="text" id="address" name="address" class="form-control" required>
                </div>
                <div class="col">
                    <label for="Nama">Nama Kepala Keluarga</label>
                    <input type="text" id="headOfFamilyName" name="headOfFamilyName" class="form-control" required>
                </div>
            </div>
            <div class="row mb-3">
               
                <div class="col">
                    <label for="Tanggal">Tanggal Transaksi</label>
                    <input type="date" id="dateOfTransaction" name="dateOfTransaction" class="form-control" required min="<%= min %>">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="Nilai">Nilai Transaksi</label>
                    <input type="number" id="transactionValue" name="transactionValue" class="form-control" required>
                </div>
                <!-- <div class="col">
                    <label for="Bulan">Pembayaran Bulan</label>
                    <input type="date" id="Bulan" name="Bulan" class="form-control" required>
                </div> -->
            </div>
         
            <!-- Tambahkan bagian input file -->
            <div class="row mb-3">
                <!-- <div class="col">
                    <label for="Bukti">Upload Bukti</label>
                    <input type="file" id="Bukti" name="Bukti" class="form-control" required>
                </div> -->
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col-auto">
                    <button class="btn btn-success" type="submit" >submit</button>
                </div>
            </div>
        </form>
    </div>

</body>
</html>

